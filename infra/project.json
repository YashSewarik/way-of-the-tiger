{
  "name": "infra",
  "projectType": "application",
  "root": "infra",
  "targets": {
    "up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose --env-file infra/.env -f infra/docker-compose.yml up -d"
      }
    },
    "down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f infra/docker-compose.yml down -v"
      }
    },
    "logs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f infra/docker-compose.yml logs -f --tail=200"
      }
    },
    "ps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f infra/docker-compose.yml ps"
      }
    }
  }
}